<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.5" type="template" method="upgrade">
    <name>UWAS 2016</name>
	<creationDate>19 Sep 2016</creationDate>
	<author>Allen chen</author>
	<copyright>Copyright Â© 2016 - UWAS.org</copyright>
	<authorEmail>INFO@UWAS.org</authorEmail>
	<authorUrl>http://www.uwas.org</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[
        <h1>UWAS site template for Joomla 3.6.x</h1>
        <ul>
            <li>Joomla 3.6.x</li>
            <li>Customized with UWAS.org requuirements</li>
        </ul>
        <p>This template is forked from <a href="http://www.masterbootstrap.com/" target="_blank">Master Bootstrap</a> one created by
        <a href="http://www.gsuez.cl" target="_blank">Gonzalo Suez </a></p>
	]]></description>
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>js</folder>
		<folder>scss</folder>
		<folder>vendor</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
    <positions>
	    <position>top</position>
	    <position>navigation</position>
        <position>fullwidth</position>
        <position>showcase</position>
	    <position>feature</position>
        <position>breadcrumbs</position>
        <position>left</position>
        <position>right</position>
        <position>content-top</position>
        <position>content-bottom</position>
        <position>bottom</position>
        <position>footer</position>
        <position>copy</position>
        <position>panelnav</position>
	    <position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="leftColumnWidth" type="list" default="3" label="Left Column Width" description="Choose a width for your left column">
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<field name="rightColumnWidth" type="list" default="3" label="Right Column Width" description="Choose a width for your right column">
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>
				<!-- SHOW FRONTPAGE-->
				<field name="frontpageshow" type="radio" class="btn-group" default="1" label="Show FrontPage Articles" description="Show FrontPage Articles">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- MODERNIZR-->
				<field name="modernizr" type="radio" class="btn-group" default="0"
					label="Modernizr"
					description="Enable JavaScript modernizr.js in head">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- FONT-AWESOME -->
				<field name="fontawesome" type="radio" class="btn-group" default="0"
					label="Font Awesome"
					description="Enable Font Awesome for better icons in Bootstrap">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- PIE-->
				<field name="pie" type="radio" class="btn-group" default="0"
					label="PIE"
					description="Enable PIE (CSS3 for IE 9+8)">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- MATERIAL DESIGN-->
				<field name="materialdesign" type="radio" class="btn-group" default="0"
					label="Material Design"
					description="Enable Material Design">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<!-- SASS-->
				<field name="compile_sass" type="radio" class="btn-group" default="0"
					label="Compile Sass"
					description="Do you want to enable Sass compilation)">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<!-- LOGO-->
			<fieldset  name="logo" type="upload_func" label="Logo">
					<field name="logo_file" type="media" label="Select your logo:"></field>
					<field name="logo_link" type="text" label="Logo link:"  description="Example: http://www.masterbootstrap.com" default="index.php"></field>
					<field name="logo_width" type="text" label="Logo width:" description="Example: 90 unit px will be used, please input valid number!!!)" default="240"></field>
					<field name="logo_height" type="text" label="Logo height:" description="Example: 90px or auto, we didn't apply unit px here for height, so it can be auto" default="auto"></field>
			</fieldset>
			<!-- LAYOUT -->
		<fieldset name="Layout" label="Layout Options">
        <field name="layout" type="radio" class="btn-group" default="full" label="Layout" description="Select Full Layout or Boxed Layout" >
          <option value="full">Full Layout</option>
          <option value="boxed">Boxed Layout</option>
        </field>
      </fieldset>
	  <!-- PATTERN -->
	   <fieldset name="Pattern" label="Pattern Options">
        <field name="pattern" type="list" default="default" label="Pattern" description="Select Pattern for Boxed Layout" >
          <option value="default">Pattern Default</option>
          <option value="1">Pattern 1</option>
          <option value="2">Pattern 2</option>
          <option value="3">Pattern 3</option>
          <option value="4">Pattern 4</option>
          <option value="5">Pattern 5</option>
          <option value="6">Pattern 6</option>
        </field>
      </fieldset>
			</fields>
	</config>
</extension>
